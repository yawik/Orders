{
    "type": "yawik-module",
    "name": "yawik/orders",
    "description": "This module adds a billing address to the job posting entering wizard .",
    "license": "MIT",
    "authors": [
        {
            "name": "Carsten Bleek",
            "email": "bleek@cross-solution.de"
        },
        {
            "name": "Mathias Gelhausen",
            "email": "gelhausen@cross-solution.de"
        },
        {
            "name": "Anthonius Munthi",
            "email": "me@itstoni.com"
        }
    ],
    "keywords": [
        "yawik", "billing"
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "yawik/core": ">=0.32",
        "yawik/auth": ">=0.32",
        "yawik/jobs": ">=0.32",
        "yawik/settings": ">=0.32",
        "yawik/applications": ">=0.32",
        "yawik/cv": ">=0.32",
        "yawik/composer-plugin": ">=0.32"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "yawik/behat": "~0.32@dev"
    },
    "autoload": {
        "psr-4": {
            "Orders\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "": "test/"
        }
    },
    "config": {
        "platform": {
            "ext-mongo": "1.6.16"
        },
        "process-timeout": 0
    },
    "scripts": {
        "auto-scripts": [
            "npm install"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "serve": "php -S localhost:8000 -t test/sandbox/public",
        "start-selenium": "./vendor/bin/selenium-server-standalone -p 4444 -Dwebdriver.chrome.driver=./vendor/bin/chromedriver",
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.32-dev"
        },
        "zf": {
            "module": "Orders"
        }
    }
}
